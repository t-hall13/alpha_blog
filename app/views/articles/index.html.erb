<div class="container article-content">
  <h1 class='center'>Articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to 'Show', article_path(article), class: 'btn btn-xs btn-info'  %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-xs btn-warning'   %></td>
      <td><%= link_to 'Delete', article_path(article), class: 'btn btn-xs btn-danger', method: :delete, data: {confirm: "Are you sure?"}  %></td>
    </tr>
  <% end %>
</table>
<h4><%= link_to "New Article", new_article_path, class: 'btn btn-block btn-default center' %></h4>
</div>