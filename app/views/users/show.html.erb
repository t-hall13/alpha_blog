<h1 class='center'><%= "#{@user.username}" %></h1>
<div class='row'>
  <div class='col-md-4 col-md-offset-4 center'>
    <%= gravatar_for @user, size: 150 %> 
  </div>
</div>
<% if @user.articles.any? %>
    <h4 class='center'><%= @user.username %>'s Articles </h4>
    <%= render 'articles/article', obj: @user.articles %>
  <% else %>
    <h4 class='center'><%= "#{@user.username} has no articles. This is very sad." %></h4>
<% end %>